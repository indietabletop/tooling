{
  "compilerOptions": {
    "rootDir": "./lib",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "Node16",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node16",
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "verbatimModuleSyntax": true,

    /* Emit */
    "outDir": "dist",
    "declaration": true
  },
  "include": ["lib"]
}